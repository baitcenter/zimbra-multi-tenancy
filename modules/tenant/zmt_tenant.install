      'description' => 'The base table for tenant.',
      'fields' => array(
        'id' => array(
          'description' => 'The primary identifier for a tenant, used internally only.',
          'type' => 'serial',
          'unsigned' => TRUE,
          'not null' => TRUE,
        ),
        'tenant_uid' => array(
          'description' => 'The {users}.uid representation of this tenant.',
          'type' => 'int',
          'not null' => TRUE,
          'default' => 0,
        ),
        'server_id' => array(
          'description' => 'The {zmt_server}.id of this tenant.',
          'type' => 'int',
          'not null' => TRUE,
          'default' => 0,
        ),
        'cos_id' => array(
          'description' => 'The {zmt_cos}.id of this tenant.',
          'type' => 'int',
          'not null' => TRUE,
          'default' => 0,
        ),
        'uid' => array(
          'description' => 'The {users}.uid that created this tenant.',
          'type' => 'int',
          'not null' => TRUE,
          'default' => 0,
        ),
        'created' => array(
          'description' => 'The Unix timestamp when the tenant was created.',
