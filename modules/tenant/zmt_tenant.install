<?php

/**
 * Implements hook_install().
 */ 
function zmt_tenant_install() {
  $zimbra_rid = (int) variable_get('zmt_zimbra_role_id', 0);
  if ($zimbra_rid > 0 ) {
    $zmt_perm = array(
      'administer any zmt_tenant' => 1,
    );
    user_role_change_permissions($zimbra_rid, $zmt_perm);
  }
}

