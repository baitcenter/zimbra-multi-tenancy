<?php

/**
 * Implements hook_install().
 */ 
function zmt_account_install() {
  $zimbra_role = config_get('zmt.settings', 'zmt_zimbra_role');
  $tenant_role = config_get('zmt.settings', 'zmt_tenant_role');
  $domain_role = config_get('zmt.settings', 'zmt_domain_role');
  $group_role = config_get('zmt.settings', 'zmt_group_role');

  $zmt_perm = array(
    'administer any zmt_account' => 1,
  );
  if (!empty($zimbra_role)) {
    user_role_change_permissions($zimbra_role, $zmt_perm);
  }
  if (!empty($tenant_role)) {
    user_role_change_permissions($tenant_role, $zmt_perm);
  }
  if (!empty($domain_role)) {
    user_role_change_permissions($domain_role, $zmt_perm);
  }
  if (!empty($group_role)) {
    user_role_change_permissions($group_role, $zmt_perm);
  }
}

